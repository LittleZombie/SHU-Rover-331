<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mao2_back">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="120dp"
        android:id="@+id/scrollView">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/playMusicActivity_musicNameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="25dp"
                android:text="song name"
                android:textColor="@android:color/background_dark"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/playMusicActivity_lyricsTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/playMusicActivity_musicNameTextView"
                android:layout_margin="25dp"
                android:autoLink="all"
                android:textColor="@android:color/background_dark"
                android:textSize="24dp" />

        </RelativeLayout>

    </ScrollView>

    <LinearLayout
        android:id="@+id/playMusicActivity_controlLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:padding="8dp"
        android:layout_above="@+id/playMusicActivity_seekBar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageButton
            android:id="@+id/playMusicActivity_startButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/play_btn_selector" />

        <ImageButton
            android:id="@+id/playMusicActivity_pauseButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/pause_btn_selector" />

        <ImageButton
            android:id="@+id/playMusicActivity_stopButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/stop_btn_selector" />

    </LinearLayout>

    <SeekBar
        android:id="@+id/playMusicActivity_seekBar"
        android:layout_width="350dp"
        android:layout_height="45dp"
        android:thumb="@drawable/seek_thumb"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>